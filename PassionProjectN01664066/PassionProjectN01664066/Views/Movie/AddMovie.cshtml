@model PassionProjectN01664066.Models.ViewModels.MovieViewModel

<h2>Add Movie</h2>

@using (Html.BeginForm("AddMovie", "Movie", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Year)
        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Year)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Director)
        @Html.TextBoxFor(m => m.Director, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Director)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rating)
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", type = "number", min = "1", max = "10", step = "0.1" })
        @Html.ValidationMessageFor(m => m.Rating)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Review)
        @Html.TextAreaFor(m => m.Review, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Review)
    </div>

    <button type="submit" class="btn btn-primary">Add Movie</button>
}